<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/start_auto_charge"
        style="@style/TextStyle"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="@string/charge_auto_start" />

    <Button
        android:id="@+id/stop_auto_charge"
        style="@style/TextStyle"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:text="@string/charge_auto_stop" />

    <Button
        android:id="@+id/stop_charge_leave"
        style="@style/TextStyle"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:text="@string/charge_stop_leave" />

</LinearLayout>
